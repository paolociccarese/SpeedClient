<?xml version="1.0" encoding="UTF-8"?>
<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
  "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='speedclient'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->
  <inherits name='info.paolociccarese.speedapp.SpeedApp'/>
  
  <set-property name="gwt.logging.logLevel" value="ALL"/>          # To change the  default logLevel
  <set-property name="gwt.logging.enabled" value="TRUE"/>            # To disable logging
  <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>  # To disable a default Handler
  <set-property name="gwt.logging.developmentModeHandler" value="ENABLED" />
  
<!--   <set-property name="info.paolociccarese.speedapp.core.logging.MyHandler" value="ENABLED" />  -->

 <!-- Disable the firebug handler as an example -->
 <!--  <set-property name="gwt.logging.firebugHandler" value="DISABLED" /> -->
  
  <!-- Enable the simple remote handler -->
  <!-- <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" /> -->
  <!-- Try uncommenting some of the following to configure logging further
  <set-property name="gwt.logging.enabled" value="FALSE"/> 
  <set-property name="gwt.logging.logLevel" value="FINE"/>
  <set-property name="gwt.logging.consoleHandler" value="DISABLED" />
  <set-property name="gwt.logging.developmentModeHandler" value="DISABLED" />
  <set-property name="gwt.logging.popupHandler" value="DISABLED" />
  <set-property name="gwt.logging.systemHandler" value="DISABLED" />
   -->

  <!-- Specify the app entry point class.                         -->
  <entry-point class='info.paolociccarese.speedclient.client.SpeedClient'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>

  <!-- allow Super Dev Mode -->
  <add-linker name="xsiframe"/>
</module>
